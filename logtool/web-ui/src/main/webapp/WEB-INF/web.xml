<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Web UI for GDLogTool</display-name>
    <servlet>
        <servlet-name>LogToolServlet</servlet-name>
        <servlet-class>
            com.griddynamics.logtool.LogToolServlet
        </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogToolServlet</servlet-name>
        <url-pattern>/logtool</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>
            com.griddynamics.logtool.ContextInitializer
        </listener-class>
    </listener>
    <listener>
        <listener-class>
            org.springframework.web.context.ContextLoaderListener
        </listener-class>
    </listener>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:/fileStorageConfiguration.xml</param-value>
    </context-param>

